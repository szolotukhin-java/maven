<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
           xmlns:dct="http://xmldefs.mydefinitions/dictionary"
           targetNamespace="http://xmldefs.mydefinitions/dictionary" version="1.0">

    <xs:element name="Dictionary" type="dct:DictionaryType"/>

    <xs:complexType name="DictionaryType">
        <xs:sequence>
            <xs:element name="Name" type="xs:string"/>
            <xs:element name="Entries" type="dct:DictionaryEntryListType" />
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="DictionaryEntryListType">
        <xs:sequence>
            <xs:element name="Word" type="dct:DictionaryEntryType" maxOccurs="unbounded"/>
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="ReasonTextType" >
        <xs:annotation>
            <xs:documentation>
                <Uid>ET0016</Uid>
                <Definition>The textual explanation of an act.</Definition>
            </xs:documentation>
        </xs:annotation>
        <xs:attribute name="v" use="required">
            <xs:simpleType>
                <xs:restriction base="xs:string">
                    <xs:maxLength value="512"/>
                </xs:restriction>
            </xs:simpleType>
        </xs:attribute>
    </xs:complexType>

    <xs:complexType name="DictionaryEntryType">
        <xs:sequence>
            <xs:element name="Word" type="xs:string"/>
            <xs:element name="Description" type="xs:string" />
            <xs:element name="ReasonText" type="dct:ReasonTextType" minOccurs="0">
                <xs:annotation>
                    <xs:documentation/>
                </xs:annotation>
            </xs:element>
        </xs:sequence>
    </xs:complexType>

</xs:schema>
